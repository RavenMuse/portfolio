---
import { skills } from "@cv";
import Section from "../Section.astro";
import Python from "@/icons/python.astro";
import Jupyter from "@/icons/jupyter.astro";
import Fastapi from "@/icons/fastapi.astro";
import Flask from "@/icons/flask.astro";
import Pydantic from "@/icons/pydantic.astro";

import Vue from "@/icons/vue.astro";
import TypeScript from "@/icons/type.astro";
import Tailwind from "@/icons/tailwind.astro";

import PostgreSQL from "@/icons/postgresql.astro";
import Git from "@/icons/git.astro";
import Uv from "@/icons/uv.astro";

import Pytorch from "@/icons/pytorch.astro";
import Sklearn from "@/icons/sklearn.astro";
import Scipy from "@/icons/scipy.astro";
import Llama from "@/icons/llama.astro";
import Huggingface from "@/icons/huggingface.astro";
import Langchain from "@/icons/langchain.astro";

import Docker from "@/icons/docker.astro";
import Spark from "@/icons/spark.astro";
import Iceberg from "@/icons/iceberg.astro";
import Doris from "@/icons/doris.astro";
import Figma from "@/icons/Figma.astro";
import Hadoop from "@/icons/hadoop.astro";

const SKILLS_ICONS: Record<string, any> = {
	Python,
	Scipy,
	Pydantic,
	Vue,
	Hadoop,
	Pytorch,
	TypeScript,
	Fastapi,
	Flask,
	Uv,
	PostgreSQL,
	Git,
	Llama,
	Jupyter,
	Tailwind,
	Langchain,
	Huggingface,
	Docker,
	Spark,
	Sklearn,
	Iceberg,
	Doris,
	Figma,
};
---

<Section className={Astro.props.className} title="Skills">
	<ul
		class="inline-flex flex-wrap gap-6 [&>li>svg]:size-5 [&>li>svg]:text-skin-hue [&>li]:text-sm"
	>
		{
			skills.map(({ name }) => {
				const iconName = name === "Next.js" ? "Next" : name;
				const Icon = SKILLS_ICONS[iconName];

				return (
					<li class="border-skin-hue/20s bg-skin-button-accent/20s borders border-solids flex items-center gap-1 rounded-md px-2 py-0.5 text-xs text-skin-muted print:border-none print:bg-transparent print:p-0 print:text-zinc-800">
						{Icon && <Icon />} <span>{name}</span>
					</li>
				);
			})
		}
	</ul>
</Section>
